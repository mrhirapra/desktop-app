{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Abox PMS",
    "version": "0.1.0",
    "identifier": "com.abox-pms.app",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "Abox PMS",
                "width": 800,
                "height": 750,
                "center": true,
                "closable": true,
                "fullscreen": false,
                "resizable": false,
                "maximizable": false,
                "devtools": true,
                "visible": false,
                "label": "main"
            },
            {
                "title": "Splashscreen",
                "width": 400,
                "height": 200,
                "center": true,
                "resizable": false,
                "decorations": false,
                "url": "splashscreen.html",
                "label": "splashscreen",
                "alwaysOnTop": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
